<Window x:Class="Rebar.RebarStair.View.RebarStairView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rebar.RebarStair.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="RebarStair" Height="675" Width="1400">
    <StackPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="300"/>
                <RowDefinition Height="280"/>

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="555"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="270"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1">
                <StackPanel>
                    <GroupBox Header="Cầu thang" FontSize="16" FontWeight="Bold" Margin="5 5 5 0" Height="290" >
                        <StackPanel>
                            <Label Content="Bề rộng thang (mm)" FontSize="13"/>
                            <TextBox Margin="0,5,0,10" FontSize="13" FontWeight="Regular" Height="27"/>
                            <Label Content="Bề rộng chiếu nghỉ (mm)" FontSize="13"/>
                            <TextBox Margin="0,5,0,10" Height="27" FontSize="13" FontWeight="Regular"/>
                            <Label Content="Loại cầu thang" FontSize="13"/>
                            <ComboBox Name="StairType" Margin="0,5,0,10" FontSize="13" FontWeight="Regular" Height="26" 
                                  DisplayMemberPath="Name"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </Grid>
            <GroupBox Header="Bản Thang " FontSize="16" FontWeight="Bold"  Margin="5 5 5 5" Grid.Column="2" Grid.Row="0" >

                <Grid Margin="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="110"/>
                        <RowDefinition Height="130"/>

                    </Grid.RowDefinitions>
                    <GroupBox Header="Thép" FontWeight="Bold" Grid.Row="0" Grid.Column="0" Grid.RowSpan="1" FontSize="13"  >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <ItemsControl ItemsSource="{Binding RebarOptionList}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Rows="0" Columns="0"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <RadioButton GroupName="RebarOptionsGroup"
                                                         IsChecked="{Binding IsChecked, Mode=TwoWay}">
                                            <RadioButton.Content>
                                                <TextBlock Text="{Binding Name}" />
                                            </RadioButton.Content>
                                        </RadioButton>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                        </Grid>
                    </GroupBox>
                    <StackPanel Grid.Row="1">
                        <Grid Height="116">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="35"/>

                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Đường kính" FontSize="13" FontWeight="Bold" Margin="2 10 0 0"/>
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Khoảng cách" FontSize="13" FontWeight="Bold" Margin="2 10 0 0" />
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Lớp bảo vệ" FontSize="13" FontWeight="Bold" Margin="2 10 0 0"/>

                            <ComboBox  FontSize="13" FontWeight="Regular" Grid.Row="0" Grid.Column="2"  Height="28" Margin="2" DisplayMemberPath="Name"/>
                            <TextBox  Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="3" Height="28" FontSize="13" FontWeight="Regular" Margin="2"/>
                            <TextBox Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="3" Height="28" FontSize="13" FontWeight="Regular" Margin="2" />
                        </Grid>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <TabControl Margin="5 5 5 5" Grid.Column="3" Grid.Row="0">
                <TabItem Header="Neo bản thang" FontSize="16" FontWeight="Bold">
                    <Grid >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="Auto"/>

                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="125"/>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Vươn Của Thép (A)"  Height="16" Margin="5,0,0,0" FontSize="13"/>
                        <TextBox Grid.Row="1" Grid.Column="1" FontSize="13" FontWeight="Regular" Margin="0,11,0,11" Width="90" HorizontalAlignment="Center" Grid.ColumnSpan="2"/>
                        <TextBlock Grid.Row="1" Grid.Column="3" Text="mm" Margin="5,0,0,0" Height="16"/>
                        <TextBlock Grid.Row="2" Grid.Column="0" Text=" Độ Dài Neo (A1)" Height="16" Margin="5,0,0,0" FontSize="13" />
                        <TextBox Grid.Row="2" Grid.Column="1" FontSize="13" FontWeight="Regular" Margin="0,11,0,11" Width="90" HorizontalAlignment="Center" Grid.ColumnSpan="2"/>
                        <TextBlock Grid.Row="2" Grid.Column="3" Text="mm" Margin="5,0,0,0" Height="16"/>
                        <TextBlock Grid.Row="3" Grid.Column="0" Text=" F1 =" Height="16" Margin="5,0,0,0" FontSize="13"/>
                        <TextBox Grid.Row="3" Grid.Column="1" FontSize="13" FontWeight="Regular" Margin="0,11,0,11" Width="90"  HorizontalAlignment="Center" Grid.ColumnSpan="2"/>
                        <TextBlock Grid.Row="3" Grid.Column="3" Text="mm" Margin="5,0,0,0" Height="16"/>
                        <TextBlock Grid.Row="4" Grid.Column="0" Text=" F2 =" Height="16" Margin="5,0,0,0" FontSize="13"/>
                        <TextBox Grid.Row="4" Grid.Column="1" FontSize="13" FontWeight="Regular" Margin="0,14,0,8" Height="28" Width="90" HorizontalAlignment="Center" Grid.ColumnSpan="2"/>
                        <TextBlock Grid.Row="4" Grid.Column="3" Text="mm" Margin="5,0,0,0" Height="16"/>
                        <TextBlock Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Text="Dữ liệu cầu thang"  FontSize="13" VerticalAlignment="Top" FontWeight="Bold" Margin="75,20,0,0"/>
                    </Grid>
                </TabItem>
                <TabItem Header="Neo chiếu nghỉ" FontSize="16" FontWeight="Bold">
                    <Grid >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" FontSize="13" Text=" L1 =" VerticalAlignment="Center" Height="16"/>
                        <TextBox Grid.Row="0" Grid.Column="1" FontSize="13"  Width="120" HorizontalAlignment="Center" FontWeight="Regular"  Margin="0,16,0,10"/>
                        <TextBlock Grid.Column="2" FontSize="13"  Text="mm" VerticalAlignment="Center" Margin="5,0,0,0" Height="16"/>
                        <TextBlock Grid.Row="1" Grid.Column="0" FontSize="13"  Text="L2 =" VerticalAlignment="Center" Height="16"/>
                        <TextBox Grid.Row="1" Grid.Column="1"  FontSize="13"  Width="120" HorizontalAlignment="Center" FontWeight="Regular" Margin="0,10,0,16" />
                        <TextBlock Grid.Row="1" Grid.Column="2" FontSize="13" Text="mm" VerticalAlignment="Center" Margin="5,0,0,0" Height="16"/>

                        <TextBlock Grid.Row="2" Grid.Column="0"
                                   TextAlignment="Center"
                                   VerticalAlignment="Center"
                                   Height="40" FontSize="13">
                            <Run Text="Đoạn Kéo"/>
                            <LineBreak/>
                            <Run Text="Dài (A)"/>
                        </TextBlock>
                        <TextBox FontSize="13" FontWeight="Regular" Grid.Row="2" Grid.Column="1"  Margin="0,11,0,11" Width="120" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Row="2" Grid.Column="2" FontSize="13" Text="mm" VerticalAlignment="Center" Margin="5,0,0,0" Height="16"/>
                    </Grid>
                </TabItem>
            </TabControl>
            <GroupBox Header="Hình ảnh" FontSize="16" FontWeight="Bold" Grid.Column =" 1"  Grid.Row="1" Margin="5 5 5 0"  Grid.RowSpan="2" Grid.ColumnSpan="2">
                <Image 
                   Stretch="Uniform" Margin="12,0,12,0"/>

            </GroupBox>
            <GroupBox Header="Hình ảnh" FontSize="16" FontWeight="Bold" Margin="5 5 5 0" Grid.Column =" 0"  Grid.Row="0" Grid.RowSpan="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="60"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Image Source="{Binding SelectedType.ImageSource1}" Stretch="Uniform
" Margin="12,0,12,0"/>
                    <Image Grid.Row="1" Source="{Binding SelectedType.ImageSource2}" Stretch="Uniform" Margin="12,0,12,0"/>
                    <Image Grid.Row="2" Source="{Binding SelectedType.ImageSource3}" Stretch="UniformToFill" ></Image>
                </Grid>

            </GroupBox>
            <GroupBox Grid.Column="3" Grid.Row="1" Margin="5 5 5 0 " FontSize="16" FontWeight="Bold" Header="Dữ liệu khác">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="Auto"/>

                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="95"/>
                        <ColumnDefinition Width="77"/>
                        <ColumnDefinition Width="43"/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="B Dầm ="  Height="16" Margin="5,0,0,0" FontSize="13"/>
                    <TextBox Grid.Row="0" Grid.Column="1" FontSize="13" FontWeight="Regular" Margin="0,11,0,11" Width="120" HorizontalAlignment="Center" Grid.ColumnSpan="2"/>
                    <TextBlock Grid.Row="0" Grid.Column="3" Text="mm" Margin="5,0,0,0" Height="16"/>
                    <TextBlock Grid.Row="1" Grid.Column="0" Text=" H Dầm =" Height="16" Margin="5,0,0,0" FontSize="13"/>
                    <TextBox Grid.Row="1" Grid.Column="1" FontSize="13" FontWeight="Regular" Margin="0,11,0,11" Width="120" HorizontalAlignment="Center" Grid.ColumnSpan="2"/>
                    <TextBlock Grid.Row="1" Grid.Column="3" Text="mm" Margin="5,0,0,0" Height="16"/>
                </Grid>
            </GroupBox>
        </Grid>
        <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,35,10">
            <Button Width="110" Height="30" Content="Pick WorkPlane"
                    Margin="0,0,10,0" Command="{Binding PickWorkPlaneCommand}" />
            <Button Width="86" Height="30" Content="Vẽ Thép"
                    Margin="0,0,10,0" Command="{Binding OkCommand}" />
            <Button Width="86" Height="30" Content="Quit"
                    Command="{Binding CloseCommand}" />
        </StackPanel>

    </StackPanel>

</Window>

